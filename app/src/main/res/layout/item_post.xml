<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <com.rey.material.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.rey.material.widget.RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.CircleImageView
                android:id="@+id/dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_action_account_circle_40" />

            <com.rey.material.widget.TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/dp"
                android:text="Ashiqur Rahman"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.rey.material.widget.TextView
                android:id="@+id/skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/dp"
                android:text="(Software Developer)"
                android:textSize="18sp"
                android:textStyle="italic" />

            <com.rey.material.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/skill"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/dp"
                android:text="Dhanmondi 15,Dhaka"
                android:id="@+id/location"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:layout_toRightOf="@+id/dp"
                android:layout_marginLeft="8dp"
                android:clickable="false"
                android:rating="4.5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_text"
                android:text="(4.5)"
                android:layout_toRightOf="@id/rating"
                android:layout_below="@id/location"
                android:textSize="20sp"
                android:layout_marginLeft="2dp"
                />

        </com.rey.material.widget.RelativeLayout>


    </com.rey.material.widget.RelativeLayout>

</android.support.v7.widget.CardView>
